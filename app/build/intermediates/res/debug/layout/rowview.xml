<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_foreground_disabled_material_dark">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/image"
        android:src="@drawable/bookbg3"
        android:layout_margin="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/tvname"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvauthor"
        android:layout_alignStart="@+id/tvauthor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="author"
        android:id="@+id/tvauthor"
        android:textSize="15dp"
        android:layout_below="@+id/tvname"
        android:layout_toRightOf="@+id/image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:id="@+id/tvprice"
        android:textSize="15dp"
        android:layout_below="@+id/tvauthor"
        android:layout_toRightOf="@+id/image"
        />


    <Button
        android:id="@+id/addcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/addtocart"
        android:textColor="#FFFFFF"

        android:layout_alignBottom="@+id/tvauthor"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout><!-- From: file:/F:/bookflix/BookFlix/app/src/main/res/layout/rowview.xml -->