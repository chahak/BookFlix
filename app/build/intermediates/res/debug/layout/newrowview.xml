<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_foreground_disabled_material_dark">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image"
        android:src="@drawable/bookbg3"
        android:layout_margin="10dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvname"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/image"
        android:layout_toRightOf="@+id/image"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvauthor"
        android:textSize="20dp"
        android:layout_below="@+id/tvname"
        android:layout_toRightOf="@+id/image"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvprice"
        android:textSize="20dp"
        android:layout_below="@+id/tvauthor"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/addcart"
        android:src="@drawable/addtocart"
        android:layout_alignBottom="@+id/tvprice"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
         />


</RelativeLayout><!-- From: file:/D:/BookFlix/app/src/main/res/layout/newrowview.xml -->